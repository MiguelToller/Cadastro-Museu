<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.ListagemLivrosController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="Consulta e Listagem de Livros" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Pesquisar por Título/ISBN:"/>
            <TextField fx:id="txtFiltro" promptText="Digite o termo de busca..." prefWidth="300"
                       onKeyReleased="#handleFiltrarLivros"/>
            <Button text="Limpar" onAction="#handleLimparFiltro"/>
        </HBox>

        <TableView fx:id="tableViewLivros" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="300.0" text="Título" />
                <TableColumn fx:id="colAno" prefWidth="100.0" text="Ano" />
                <TableColumn fx:id="colISBN" prefWidth="150.0" text="ISBN" />
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Voltar" onAction="#handleVoltar" />
        </HBox>

    </VBox>
</AnchorPane>