<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.LoginController">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">

        <Label text="Acesso ao Sistema do Museu Treze de Maio" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TextField fx:id="txtEmail" promptText="Email" />
        <PasswordField fx:id="txtSenha" promptText="Senha" />

        <HBox alignment="CENTER" spacing="15.0">
            <Button onAction="#handleLogin" text="Entrar" style="-fx-font-weight: bold;" />
            <Button onAction="#handleAcessoComunidade" text="Acesso Comunidade" />
        </HBox>

        <Label fx:id="lblMensagem" style="-fx-text-fill: red;" />

    </VBox>
</AnchorPane>