<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"

            fx:controller="com.example.cadastromuseu.Biblioteca.controller.LivroController">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="20.0">

        <Label text="Cadastro de Novo Livro" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="txtTitulo" promptText="Título do Livro" />
        <TextField fx:id="txtAno" promptText="Ano de Publicação" />
        <TextField fx:id="txtIsbn" promptText="ISBN" />

        <Separator />

        <ComboBox fx:id="cbEditora" prefWidth="Infinity" promptText="Selecione a Editora" />
        <ComboBox fx:id="cbCategoria" prefWidth="Infinity" promptText="Selecione a Categoria" />

        <Separator />

        <Button onAction="#salvar" text="Salvar Livro" prefWidth="200.0" />

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

    </VBox>
</AnchorPane>