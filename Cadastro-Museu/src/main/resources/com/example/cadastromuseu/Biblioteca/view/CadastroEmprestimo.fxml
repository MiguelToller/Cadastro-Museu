<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.EmprestimoController">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">

        <Label text="Registro de Empréstimo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>

            <Label text="Livro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="cbLivro" prefWidth="Infinity" promptText="Selecione o Livro" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="cbUsuario" prefWidth="Infinity" promptText="Selecione o Usuário" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Data Empréstimo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="dpDataEmprestimo" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Devolução Prevista:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="dpDataDevolucao" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        </GridPane>

        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <Button onAction="#registrarEmprestimo" text="Registrar Empréstimo" style="-fx-font-weight: bold;" />
            <Button onAction="#voltar" text="Voltar" />
        </HBox>

    </VBox>
</AnchorPane>