<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.UsuarioController">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">

        <Label text="Cadastro de Novo Usuário" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="txtNome" promptText="Nome Completo" />
        <TextField fx:id="txtEmail" promptText="Email" />
        <PasswordField fx:id="txtSenha" promptText="Senha" />
        <ComboBox fx:id="cbPerfilAcesso" promptText="Selecionar Tipo de Usuário" />

        <Separator />

        <HBox alignment="CENTER" spacing="15.0">
            <Button onAction="#salvar" text="Salvar Usuário" style="-fx-font-weight: bold;" />
            <Button onAction="#voltar" text="Voltar" />
        </HBox>

    </VBox>
</AnchorPane>