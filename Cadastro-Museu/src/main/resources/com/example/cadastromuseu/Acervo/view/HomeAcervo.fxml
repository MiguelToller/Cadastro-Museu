<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cadastromuseu.Acervo.controller.HomeAcervoController">

    <top>
        <!-- Container principal TOP -->
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">

            <!-- 1. Botão de Voltar (Canto Esquerdo) -->
            <Button fx:id="btnVoltarMenuPrincipal" text="&lt; Voltar ao Menu Principal" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#handleVoltarMenuPrincipal"/>

            <!-- Espaço Flexível para empurrar os elementos restantes para a direita -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- 2. Informações do Usuário e Sair (Canto Direito) -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="lblUsuarioLogadoAcervo" text="Logado como: [Usuário]" style="-fx-font-weight: bold;"/>
                <Button fx:id="btnSair" text="Sair" onAction="#handleLogout" style="-fx-font-weight: bold;"/>
            </HBox>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Gestão do Acervo Museológico">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>
            <Separator prefWidth="400.0" />

            <Button fx:id="btnCadastrarItemAcervo" text="1. Cadastrar Novo Item" onAction="#abrirCadastroItemAcervo" prefWidth="250.0"/>
            <Button fx:id="btnGerenciarAcervo" text="2. Gerenciar Itens (CRUD)" onAction="#abrirGestaoAcervo" prefWidth="250.0"/>
            <Button fx:id="btnGerenciarLocalizacoes" text="3. Gerenciar Localizações" onAction="#abrirGestaoLocalizacoes" prefWidth="250.0"/>
            <Button fx:id="btnListarAcervo" text="4. Consultar Acervo (Público)" onAction="#listarItensAcervo" prefWidth="250.0"/>

        </VBox>
    </center>
</BorderPane>