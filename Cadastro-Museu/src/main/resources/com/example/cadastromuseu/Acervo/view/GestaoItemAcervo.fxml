<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="650.0" prefWidth="900.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cadastromuseu.Acervo.controller.GestaoItemAcervoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Gerenciamento e Consulta do Acervo Museológico">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Buscar por Título/Tipo:" />
        <TextField fx:id="txtPesquisa" prefWidth="300.0" promptText="Digite para filtrar..." />
        <Button onAction="#handlePesquisar" text="Pesquisar" />
    </HBox>

    <TableView fx:id="tvItensAcervo" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="tcId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="tcTitulo" prefWidth="300.0" text="Título" />
            <TableColumn fx:id="tcTipo" prefWidth="150.0" text="Tipo de Item" />
            <TableColumn fx:id="tcData" prefWidth="100.0" text="Data" />
            <TableColumn fx:id="tcLocalizacao" prefWidth="200.0" text="Localização" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleVisualizarDetalhes" text="Visualizar Detalhes" />
        <Button onAction="#handleEditarItem" style="-fx-background-color: #f0ad4e; -fx-text-fill: white;" text="Editar" />
        <Button onAction="#handleExcluirItem" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Excluir" />
        <Button onAction="#handleNovoItem" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Novo Item" />
    </HBox>
</VBox>