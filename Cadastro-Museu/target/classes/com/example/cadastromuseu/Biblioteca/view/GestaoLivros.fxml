<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.GestaoLivrosController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="Gestão e Manutenção do Acervo de Livros" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Pesquisar:"/>
            <TextField fx:id="txtFiltro" promptText="Título ou ISBN..." prefWidth="300" onKeyReleased="#handleFiltrarLivros"/>
        </HBox>

        <TableView fx:id="tableViewLivros" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="300.0" text="Título" />
                <TableColumn fx:id="colAno" prefWidth="80.0" text="Ano" />
                <TableColumn fx:id="colISBN" prefWidth="150.0" text="ISBN" />
            </columns>
        </TableView>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnNovo" text="Novo Livro" onAction="#handleNovoLivro" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnEditar" text="Editar Selecionado" onAction="#handleEditarLivro"/>
            <Button fx:id="btnExcluir" text="Excluir Selecionado" onAction="#handleExcluirLivro" style="-fx-text-fill: red;"/>
            <Button text="Voltar" onAction="#handleVoltar"/>
        </HBox>

    </VBox>
</AnchorPane>