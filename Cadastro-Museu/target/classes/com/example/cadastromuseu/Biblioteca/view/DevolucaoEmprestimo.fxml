<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cadastromuseu.Biblioteca.controller.DevolucaoEmprestimoController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="Gestão de Empréstimos Pendentes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="tableViewPendentes" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colLivro" prefWidth="250.0" text="Livro" />
                <TableColumn fx:id="colUsuario" prefWidth="180.0" text="Usuário" />
                <TableColumn fx:id="colDataEmprestimo" prefWidth="120.0" text="Empréstimo" />
                <TableColumn fx:id="colDataDevolucao" prefWidth="120.0" text="Dev. Prevista" />
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="btnRegistrarDevolucao" text="Registrar Devolução" onAction="#handleRegistrarDevolucao" style="-fx-font-weight: bold;" />
            <Button text="Voltar" onAction="#handleVoltar" />
        </HBox>

    </VBox>
</AnchorPane>