<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cadastromuseu.Acervo.controller.ConsultaPublicaAcervoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Consulta Pública do Acervo">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Pesquisar:"/>
                <TextField fx:id="txtPesquisa" prefWidth="300.0" promptText="Digite título ou tipo do item..." />

                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10.0">

                    <Button mnemonicParsing="false" onAction="#handleVisualizarDetalhes" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Visualizar Detalhes" />

                </HBox>
            </children>
        </HBox>

        <TableView fx:id="tvItensAcervo" prefHeight="400.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tcId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="tcTitulo" prefWidth="250.0" text="Título" />
                <TableColumn fx:id="tcTipo" prefWidth="150.0" text="Tipo" />
                <TableColumn fx:id="tcData" prefWidth="120.0" text="Data" />
                <TableColumn fx:id="tcLocalizacao" prefWidth="200.0" text="Localização" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <Button mnemonicParsing="false" onAction="#handleFechar" prefWidth="100.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Fechar" />
        </HBox>

    </children>
</VBox>